import players
from settings import Settings
import random
from game_state import GameState
import dialogue
import ui

player1 = players.Human('Creator', 'A veteran of the great battle of Katabatic.')
random.shuffle(Settings.CHARACTERS)
computer1 = players.Computer(Settings.CHARACTERS[0], 5)
computer2 = players.Computer(Settings.CHARACTERS[1], 5)
my_speech = dialogue.Speech('Pat', 'Hello, and welcome to the Wheel of Fortune', False)
game_state = GameState(player1, computer1, computer2)
game_state._current_turn = random.randint(1, 3)
game_state.dialogue.new_speech(my_speech)
print(ui.generate_game_ui_string(game_state, True))
